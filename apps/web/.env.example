# Mapbox GL JS Access Token
# Get your token at: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Resend API Key
# Get your API key at: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email address to receive RSVP notifications (also shown in footer)
RSVP_EMAIL=your-email@example.com
NEXT_PUBLIC_RSVP_EMAIL=your-email@example.com

# Clerk Authentication
# Get your keys at: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Admin email allowlist (comma-separated)
NEXT_PUBLIC_ADMIN_EMAILS=your-email@example.com,your-email@example.com
ADMIN_EMAILS=your-email@example.com,your-email@example.com

# Database Connection String (Supabase PostgreSQL via Kysely)
# Get from: https://supabase.com/dashboard/project/[your-project]/settings/database
# Under "Connection string" > "URI" - use the connection pooling string
# Format: postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxxxxx:your-password@aws-0-us-west-1.pooler.supabase.com:6543/postgres
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application URL (used for generating RSVP links in emails)
NEXT_PUBLIC_APP_URL=http://localhost:3000
