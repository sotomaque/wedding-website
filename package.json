{
  "name": "wedding-website",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.7.3"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "bun --filter=web lint:fix"
    ]
  },
  "dependencies": {
    "@deck.gl/core": "^9.2.5",
    "@deck.gl/layers": "^9.2.5",
    "@deck.gl/react": "^9.2.5",
    "@t3-oss/env-nextjs": "^0.13.10",
    "mapbox-gl": "^3.17.0",
    "react-hook-form": "^7.69.0",
    "react-map-gl": "^8.1.0",
    "resend": "^6.6.0",
    "zod": "^4.3.2"
  }
}
