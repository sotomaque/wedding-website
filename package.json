{
  "name": "wedding-website",
  "version": "0.0.1",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supabase": "^2.70.5",
    "turbo": "^2.7.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "bun --filter=web lint:fix"
    ]
  },
  "packageManager": "bun@1.3.5",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
